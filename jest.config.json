{
  "projects": [
    {
      "displayName": "Unit",
      "collectCoverageFrom": ["**/*.ts"],
      "coveragePathIgnorePatterns": [
        "/node_modules/"
      ],
      "coverageThreshold": {
        "global": {
          "lines": 70
        }
      },
      "moduleFileExtensions": ["ts", "js"],
      "rootDir": "src",
      "testEnvironment": "node",
      "testMatch": ["<rootDir>/**/*.spec.ts"],
      "testPathIgnorePatterns": ["/node_modules"],
      "transform": {
        "^.+\\.ts?$": "ts-jest"
      }
    }
  ]
}
